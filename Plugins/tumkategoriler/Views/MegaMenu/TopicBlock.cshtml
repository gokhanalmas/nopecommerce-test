@model TopicModel
@using Nop.Web.Models.Topics;
@if (!String.IsNullOrEmpty(Model.Title))
{
    <a href="@Url.RouteUrl("Topic", new {SystemName = Model.SystemName})">@Model.Title</a>
}
else
{
    <a href="@Url.RouteUrl("Topic", new {SystemName = Model.SystemName})">@T("SevenSpikes.MegaMenu.DefaultTopicTitle")</a>
}
<div class="dropdown">
            @Html.Raw(Model.Body)
</div>

