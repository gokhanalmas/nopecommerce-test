@using Nop.Core;
@using Nop.Core.Infrastructure;

@model SevenSpikes.Nop.Plugins.AjaxCart.Models.NopAjaxCartSettingsModel
@{
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/kendo.common.min.css");
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/kendo.default.min.css");
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.AjaxCart/Themes/" + Model.Theme + "/Content/styles.css");

    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.AjaxCart/Themes/" + Model.Theme + "/Content/styles.rtl.css");
    }

    Html.AppendScriptParts("~/Plugins/SevenSpikes.Nop.Plugins.AjaxCart/Scripts/jquery.json-2.2.min.js");
    Html.AppendScriptParts("~/Plugins/SevenSpikes.Nop.Plugins.AjaxCart/Scripts/AjaxCart.min.js");

    Html.AppendScriptParts("~/Plugins/SevenSpikes.Core/Scripts/kendo.all.min.js");
}

<div class="ajaxCartInfo" data-getAddProductToCartAjaxButtonUrl="@Url.Action("GetAddProductToCartAjaxButton", "NopAjaxCart")" 
     data-getAddProductVariantToCartAjaxButtonUrl="@Url.Action("GetAddProductVariantToCartAjaxButtonWidget", "NopAjaxCart")" 
     data-productPageAddToCartButtonSelector="@Model.ProductPageAddToCartButtonSelector"
     data-productBoxAddToCartButtonSelector="@Model.ProductBoxAddToCartButtonSelector"
     data-productBoxProductItemElementSelector="@Model.ProductBoxProductItemElementSelector">
</div>
