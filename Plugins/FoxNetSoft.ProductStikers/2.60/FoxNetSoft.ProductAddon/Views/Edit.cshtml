@model AddonModel
@using FoxNetSoft.Plugin.Misc.ProductAddon.Models          
@using Nop.Web.Framework
@{
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";
    //page title
    ViewBag.Title = @T("Admin.FoxNetSoft.ProductAddon.EditAddonDetails").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "category-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.FoxNetSoft.ProductAddon.EditAddonDetails") - @Model.Description @Html.ActionLink("(" + T("Admin.FoxNetSoft.ProductAddon.BackToList") + ")", "List")
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="t-button">@T("Admin.Common.Save")</button>
            <button type="submit" name="save" value="save-continue" class="t-button">@T("Admin.Common.SaveContinue")</button>
            <span id="category-delete" class="t-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("~/Plugins/FoxNetSoft.ProductAddon/Views/_CreateOrUpdate.cshtml", Model)    
}
@Html.DeleteConfirmation("category-delete")