@model AddonModel
@using FoxNetSoft.Plugin.Misc.ProductAddon.Models          
@using Nop.Web.Framework
@{
    Layout = "~/Administration/Views/Shared/_AdminLayout.cshtml";
    //page title
    ViewBag.Title = @T("Admin.FoxNetSoft.ProductAddon.AddNew").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "category-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.FoxNetSoft.ProductAddon.AddNew") @Html.ActionLink("(" + T("Admin.FoxNetSoft.ProductAddon.BackToList") + ")", "List")
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="t-button">@T("Admin.Common.Save")</button>
            <button type="submit" name="save-continue" value="save-continue" class="t-button">@T("Admin.Common.SaveContinue")</button>
        </div>
    </div>
    @*@Html.Partial("_CreateOrUpdate", Model)*@
    @Html.Partial("~/Plugins/FoxNetSoft.ProductAddon/Views/_CreateOrUpdate.cshtml", Model)
}